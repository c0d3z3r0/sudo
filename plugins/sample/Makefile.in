$(LIBOBJDIR)utimes.lo: $(top_srcdir)/compat/utimes.c $(incdir)/compat.h $(top_srcdir)/compat/compat/utime.h $(top_builddir)/config.h
	$(LIBTOOL) --mode=compile $(CC) -c -o $@ $(CPPFLAGS) $(CFLAGS) $(DEFS) $(OPTIONS) $(top_srcdir)/compat/utimes.c

install: install-dirs install-plugin

install-dirs:
	$(SHELL) $(top_srcdir)/mkinstalldirs $(DESTDIR)$(plugindir)

install-binaries:

install-man:

install-plugin: install-dirs sample_plugin.la
	$(LIBTOOL) --mode=install $(INSTALL) sample_plugin.la $(plugindir)

check:
	@echo nothing to check

clean:
	-rm -f *.a *.o *.lo *.la stamp-* core *.core core.*

mostlyclean: clean

distclean: clean
	-rm -rf Makefile sample_plugin.lo .libs

clobber: distclean

realclean: distclean
	rm -f TAGS tags

cleandir: realclean
